<odoo>
   <record id="res_config_settings_view_form_inherit_ai_livechat" model="ir.ui.view">
       <field name="name">res.config.settings.view.form.ai.livechat</field>
       <field name="model">res.config.settings</field>
       <field name="inherit_id" ref="base.view_res_config_settings"/>
       <field name="arch" type="xml">
           <xpath expr="//div[hasclass('settings')]" position="inside">
               <div class="app_settings_block" data-string="AI Livechat">
                   <h2>AI Livechat</h2>
                   <div class="row mt16 o_settings_container">
                       <div class="col-12 col-lg-6 o_setting_box">
                           <div class="o_setting_left_pane">
                               <field name="default_ai_endpoint"/>
                           </div>
                           <div class="o_setting_right_pane">
                               <label for="default_ai_endpoint"/>
                               <div class="text-muted">URL del endpoint de la API de IA</div>
                           </div>
                       </div>

                       <div class="col-12 col-lg-6 o_setting_box">
                           <div class="o_setting_left_pane">
                               <field name="default_ai_api_key" password="True"/>
                           </div>
                           <div class="o_setting_right_pane">
                               <label for="default_ai_api_key"/>
                               <div class="text-muted">Clave API privada</div>
                           </div>
                       </div>
                   </div>
               </div>
           </xpath>
       </field>
   </record>
</odoo>
